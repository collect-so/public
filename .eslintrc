{
  "extends": ["eslint-config-next"],
  "globals": {
    "React": true,
    "JSX": true,
    "globalThis": true
  },
  "ignorePatterns": ["global.d.ts", "**/*.test.*"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "react-hooks/exhaustive-deps": "warn",
    "react/no-unescaped-entities": "off"
  }
}
